doctype html
html
    head
        style
           link(rel="stylesheet", href="/static/create.css", type="text/css")

    body
        header#header
            div#logo
                img(src="/static/images/logo.svg")
            nav#nav
                ul
                    li Home
                    li Genres
                    li Stories
                    .g-signin(data-onsuccess="onSignIn")
        script.
            function onSuccess(googleUser) {
                console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
            }
            function onFailure(error) {
                console.log(error);
            }
            function renderButton() {
                gapi.signin2.render('my-signin2', {
                    'scope': 'profile email',
                    'width': 240,
                    'height': 50,
                    'longtitle': true,
                    'theme': 'dark',
                    'onsuccess': onSuccess,
                    'onfailure': onFailure
                });
            }

            renderButton();