doctype html
html
    head
        link(rel="stylesheet", href="/static/create.css", type="text/css")

    body
        include header.pug
        div#content
            h1#title New Story
            form(action="/create", method="POST")
                div.input
                    label(for="title") Title
                    input#title(type="text", name="title")
                    
                div.input
                    label(for="prompt") Prompt 
                    input#prompt(type="text", name="prompt")

                div.checkbox
                    input(type="hidden", value="false")
                    input#privacy(type="checkbox", name="private", value="true")
                    label(for="privacy")
                    span Private?
                
                input#author(name="author", type="hidden")
                button(type="submit") Create

        script(src="https://code.jquery.com/jquery-3.3.1.min.js")
        script.
            if(window.sessionStorage.user) {
                $('#author').val(window.sessionStorage.user);
            } else {
                $('button[type="submit"]').replaceWith('<div class="g-signin2" data-onsuccess="onSignIn" data-callback="formSubmit"></div>')
                
            }
